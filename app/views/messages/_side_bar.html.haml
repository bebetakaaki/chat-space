.side-bar__group
  .side-bar__name
    .userbox
      .neme
        = current_user.name
      .icons
        .icons2
        = link_to new_group_path,  class: "icon_edit" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user),class: "icon_cog" do
          = icon('fas','cog')
  .side-bar__list
    - current_user.groups.each do |group|
      .side-bar__chart
        = link_to '#' do
          .side-bar__member
            = group.name
